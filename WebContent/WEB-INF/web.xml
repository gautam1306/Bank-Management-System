<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
 <session-config><cookie-config>
 <http-only>true</http-only>
 <secure>true</secure> </cookie-config>
 </session-config>
  <display-name>BankApplication</display-name>
	<servlet>
	<servlet-name>CustomerloginPage</servlet-name>
	<jsp-file>/index.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>CustomerloginPage</servlet-name>
	<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet>
	<servlet-name>CustomerDashBoard</servlet-name>
	<jsp-file>/customerdashboard.jsp</jsp-file>
	</servlet>
	<servlet>
	<servlet-name>account</servlet-name>
	<jsp-file>/Accounts.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>account</servlet-name>
	<url-pattern>/account</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	<servlet-name>CustomerDashBoard</servlet-name>
	<url-pattern>/dashboard</url-pattern>
	</servlet-mapping>
	<servlet>
	<servlet-name>transactionstatement</servlet-name>
	<jsp-file>/transactionstatement.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>transactionstatement</servlet-name>
	<url-pattern>/transaction</url-pattern>
	</servlet-mapping>
	  <resource-ref>
      <description>datasource</description>
      <res-ref-name>jdbc/Bank</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  </resource-ref>
</web-app>